{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": ["es2020"],
    "types": ["node"]
  },
  "include": ["./src", ".eslintrc.js"],
  "exclude": ["./node_modules"]
}

{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "server": "ts-node-dev src/index.ts",
    "codegen": "graphql-codegen --config ./src/graphql/codegen.ts",
    "dev": "concurrently  \"yarn server\" \"yarn codegen --watch\"",
    "db:migrate": "dotenv -e ../../.env -- prisma migrate dev --schema ./src/prisma/schema.prisma",
    "postinstall": "prisma generate --schema ./src/prisma/schema.prisma"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "4.0.0",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/typescript": "4.0.0",
    "@graphql-codegen/typescript-resolvers": "4.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/lodash.merge": "^4.6.7",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^8.1.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^2.0.22",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "@prisma/client": "^4.15.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "lodash.merge": "^4.6.2",
    "next-auth": "^4.22.1",
    "prisma": "^4.15.0"
  }
}
